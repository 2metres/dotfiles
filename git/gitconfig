# Git configuration
# Update user.name and user.email after cloning dotfiles

[user]
	name = <your_name>
	email = <your_email>

[core]
    pager = delta

[interactive]
    diffFilter = delta --color-only

[delta]
    navigate = true  # use n and N to move between diff sections
    dark = true      # or light = true, or omit for auto-detection

[merge]
    conflictStyle = zdiff3

[pull]
    rebase = false

[init]
    defaultBranch = main
